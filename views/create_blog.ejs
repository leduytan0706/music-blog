<%- include("partials/header.ejs"); %>
<section id="create-form">
    <h1>Create a blog post</h1>
    <hr>
    <form action="/create_blog" method="POST">
        <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title"  placeholder="Post title" required>
        </div>
        <div class="form-group">
        <label for="content">Post content</label>
        <textarea class="form-control" id="content" name="content" placeholder="Post content" rows="10" required></textarea>
        </div>
        <input type="submit" class="btn btn-primary" value="Post">
    </form>
</section>
