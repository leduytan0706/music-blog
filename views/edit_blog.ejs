<%- include("partials/header.ejs"); %>
<section id="create-form">
    <h1>Edit a blog post</h1>
    <hr>
    <form action="/edit_blog" method="POST">
        <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title"  placeholder="Post title" value="<%= post["title"] %>" required>
        <input type="number" style="display: none;" name="index" value="<%= index %>">
        </div>
        <div class="form-group">
        <label for="content">Post content</label>
        <textarea class="form-control" id="content" name="content" placeholder="Post content" rows="10" value="" required><%= post["content"] %></textarea>
        </div>
        <input type="submit" class="btn btn-primary" value="Repost">
    </form>
</section>
<%- include("partials/footer.ejs"); %>